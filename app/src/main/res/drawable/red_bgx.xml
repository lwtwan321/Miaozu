<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:drawable="@drawable/red_select_shape" android:state_pressed="true"/>
    <!-- pressed -->
    <item android:drawable="@drawable/red_select_shape" android:state_focused="true"/>
    <!-- focused -->
    <item android:drawable="@drawable/red_select_shape" android:state_hovered="true" />
    <!-- hovered -->
    <item android:drawable="@drawable/red_default_shape" android:state_enabled="true"/>
    <!-- default -->

    <item android:drawable="@drawable/red_disable_shape" android:state_enabled="false"/>

</selector>